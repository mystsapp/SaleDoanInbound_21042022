@model UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect">Danh Sách Ngành Nghề</a></li>
                    <li class="breadcrumb-item active">Thêm mới user</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm mới user</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">

                    <input type="hidden" asp-for="User.Id" /> <!-- this field is required-->
                    <input type="hidden" asp-for="TenCreate" value="abc" /> <!-- this field is required-->
                    <input type="hidden" asp-for="User.NguoiTao" />
                    <input type="hidden" asp-for="User.NgayTao" />

                    <input type="hidden" asp-for="OldPassword" />


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="User.Username" class="control-label"></label>
                            <input asp-for="User.Username" class="form-control" readonly />
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.Password" class="control-label"></label>
                            <input asp-for="User.Password" class="form-control" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.HoTen" class="control-label"></label>
                            <input asp-for="User.HoTen" class="form-control" />
                            <span asp-validation-for="User.HoTen" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.DienThoai" class="control-label"></label>
                            <input asp-for="User.DienThoai" class="form-control" />
                            <span asp-validation-for="User.DienThoai" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">

                        <div class="col-md-4">
                            <label asp-for="User.Email" class="control-label"></label>
                            <input asp-for="User.Email" class="form-control" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="User.MaCN" class="control-label"></label>
                            <select asp-for="User.MaCN" class="form-control"
                                    asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn"))">
                            </select>
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 ">
                            <label asp-for="User.PhongBanId" class="control-label"></label>
                            <select asp-for="User.PhongBanId" class="form-control "
                                    asp-items="@(new SelectList(Model.PhongBans, "Maphong", "Tenphong"))">
                            </select>
                            <span asp-validation-for="User.PhongBanId" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.RoleId" class="control-label"></label>
                            <select asp-for="User.RoleId" class="form-control"
                                    asp-items="@(new SelectList(Model.Roles, "Id", "RoleName"))" id="ddlRoles">
                            </select>
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-10">
                            <label asp-for="User.PhongBans" class="control-label"></label>
                            <input type="hidden" asp-for="User.PhongBans" id="hidDdlPhongBans" />
                            <select class="phongBans select2-hidden-accessible" multiple="" data-placeholder="Chọn phòng ban" style="width: 100%;" data-select2-id="24" tabindex="-1" aria-hidden="true"
                                    asp-items="@(new SelectList(Model.PhongBans, "Maphong", "Tenphong"))" id="ddlPhongBans">
                            </select>

                            <span asp-validation-for="User.PhongBans" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="User.TrangThai" class="control-label"></label>
                            <br />
                            <div class="icheck-primary d-inline ">

                                <input type="checkbox" id="todoCheck2" asp-for="User.TrangThai" >
                                <label for="todoCheck2"></label>
                            </div>
                            <span asp-validation-for="User.TrangThai" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect"><i class="fas fa-backward"></i></a>
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section Scripts{
    @*<script>

            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: 'dd/mm/yy'
                });
            });
        </script>*@

    <script src="~/js/Admin/User/editController.js"></script>
    <script>
        $('.phongBans').select2({

            theme: 'bootstrap4'
        });

        // gan'  qua hidden field
        $('.phongBans').on('change', function () {
            phongBan = $(this).val();

            $('#hidDdlPhongBans').val(phongBan);

        });

    </script>
}

